<div class="row">
    <main class="col-md-12">
        <br>
        <h2>{{viewData.student.firstName}} {{viewData.student.lastName}} - Student: {{viewData.student.studentNum}}</h2>
        <hr />
        <form action="/student/update" method="POST">
            <input type="hidden" name="studentNum" value="{{viewData.student.studentNum}}" />
            <fieldset>
                <legend>Personal Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>First Name:</label>
                            <input class="form-control" name="firstName" type="text" value="{{viewData.student.firstName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Last Name:</label>
                            <input class="form-control" name="lastName" type="text" value="{{viewData.student.lastName}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Email:</label>
                            <input class="form-control" type="email" name="email" value="{{viewData.student.email}}" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Address Street:</label>
                            <input class="form-control" type="text" name="addressStreet" value="{{viewData.student.addressStreet}}" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>City:</label>
                            <input class="form-control" type="text" name="addressCity" value="{{viewData.student.addressCity}}" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Province:</label>
                            <input class="form-control" type="text" name="addressProvince" value="{{viewData.student.addressProvince}}" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="form-check-label" for="TA" style="margin-right: 25px;">TA:</label>
                            <input class="form-check-input" type="checkbox" name="TA" id="TA" {{#if viewData.student.TA}}checked{{/if}} />
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Status:</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" value="Full Time" id="statusFullTime" {{#equal viewData.student.status "Full Time"}}checked{{/equal}}>
                                <label class="form-check-label" for="statusFullTime">Full Time</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="status" value="Part Time" id="statusPartTime" {{#equal viewData.student.status "Part Time"}}checked{{/equal}}>
                                <label class="form-check-label" for="statusPartTime">Part Time</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label for="course">Course:</label>
                            {{#if viewData.courses}}
                            <select class="form-control" name="courseId" id="course"> 
                                <option value="">Select Course</option>
                                {{#each viewData.courses}}
                                    <option value="{{courseId}}" {{#if selected}}selected{{/if}}>{{courseCode}}</option>
                                {{/each}}
                            </select>
                            {{else}}
                            <div>No Courses</div>
                            {{/if}}
                        </div>  
                    </div>
            </fieldset>
            <hr />
            <input type="submit" class="btn btn-primary float-right" value="Update Student" /><br /><br /><br />
        </form>
    </main>
</div>
