<div class="row">
    <div class="col-md-12">
        <br>
        <h2>Courses</h2>
        <hr />
        <div class="table-responsive">
            <table class="table ">
                <thead>
                    <tr>
                        <th>Course Code</th>
                        <th>Course Description</th>
                        <th></th> <!-- Empty header for the remove button column -->
                    </tr>
                </thead>
                <tbody>
                    {{#each courses}}
                    <tr>
                        <td><a href="/course/{{courseId}}">{{courseCode}}</a></td>
                        <td><a href="/students?course={{courseId}}">{{courseDescription}}</a></td>
                        <td>
                            <a href="/courses/delete/{{courseId}}" class="btn btn-danger">remove</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        {{#unless courses}}
        <div class="col-md-12 text-center">
            <strong>{{message}}</strong>
        </div>
        {{/unless}}
    </div>
</div>
